{
  "name": "place-asile",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22",
    "yarn": "1.22"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npx @tailwindcss/cli -i ./src/app/globals.css -o build.css --minify && next build && npx tsx copy-assets.ts",
    "start": "node .next/standalone/server.js",
    "check:ts": "npx tsc --noEmit",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:ts": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "npx stylelint \"**/*.css\"",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui --grep @manual",
    "one-off": "npx tsx prisma/utils/run-one-off.ts",
    "prepare": "husky",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:apply-views": "npx tsx scripts/apply-views.ts",
    "prisma:apply-views:dev": "npx tsx -r dotenv/config scripts/apply-views.ts",
    "prisma:migrate:name": "npx prisma migrate dev --name",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:seed": "npx prisma db seed",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:push": "npx prisma db push && npx prisma generate",
    "predev": "react-dsfr update-icons --silent",
    "prebuild": "react-dsfr update-icons",
    "postinstall": "npx patch-package",
    "sql:format:check": "set -e; failed=0; for f in scripts/views/*.sql; do tmp=$(mktemp); sql-formatter \"$f\" --config sql-formatter.config.json > \"$tmp\"; if ! diff -u \"$f\" \"$tmp\" >/dev/null; then echo \"SQL formatting issues in $f\"; failed=1; fi; rm -f \"$tmp\"; done; [ \"$failed\" -eq 0 ] || exit 1",
    "sql:format:fix": "for f in scripts/views/*.sql; do sql-formatter \"$f\" --config sql-formatter.config.json --fix; done"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@codegouvfr/react-dsfr": "^1.28.0",
    "@faker-js/faker": "^10.1.0",
    "@formkit/auto-animate": "^0.9.0",
    "@gouvfr/dsfr-chart": "1.0.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.17.1",
    "@sentry/nextjs": "^10.20.0",
    "@socialgouv/matomo-next": "^1.10.0",
    "@tailwindcss/postcss": "^4.1.13",
    "chartist": "^1.4.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "leaflet": "^1.9.4",
    "minio": "^8.0.6",
    "next": "15.5.6",
    "next-auth": "^4.24.11",
    "next-leaflet-cluster": "^1.0.0",
    "postcss": "^8.5.6",
    "pretty-bytes": "^7.1.0",
    "prisma": "^6.17.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-leaflet": "^5.0.0",
    "read-excel-file": "^6.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.3",
    "uuid": "^13.0.0",
    "zod": "^3.25.74 "
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "node-mocks-http": "^1.17.2",
    "node-xlsx": "^0.24.0",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "sql-formatter": "^15.6.10",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}